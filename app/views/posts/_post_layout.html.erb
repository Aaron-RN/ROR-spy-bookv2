<div class="col-md-8 mx-auto card bg-light">

  <div class=" ">
    <div class="font-weight-bold mt-2">
      <%= object.user.fname %>
      <%= object.user.lname %>
    </div> <br>
        
    <div class="font-italic">
      <%= object.content %>
    </div>
    
    <% if object.imageURL%>
      <%= image_tag(object.imageURL)%>
    <% end %>
  </div> 

  <div class="border-bottom"><%= render 'likes/like_posts', object: object%></div>

  <div class="mx-5">

    <%object.comments.each do |c|%>
      <div class="border-bottom">
        <span class= "font-weight-bold">
          <%= c.user.fname %>
          <%= c.user.lname%> 
        </span>
        <br>
        <%= c.content %> 
        <% if current_user.id == c.user_id%>
          <%= link_to  "Delete comment", comment_path(c), method: :delete, data: { confirm: "You sure?" } %>
        <% end %>
        
        <div><%= render 'likes/like_comments', object: c%></div> 
      </div>
    <%end%> 
    
    <div class="  ">
      <%= render 'comments/form', object: object %>
    </div>
  </div>
  <br><br>
</div> <br> <br> 
